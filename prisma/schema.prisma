/*
  First, create and apply the migration to add the userId field
  npx prisma migrate dev --name add-user-id

  Then regenerate the Prisma client with the new types
  npx prisma generate
*/

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("DATABASE_URL")
}

model JobApplication {
  id String @id @default(cuid())
  company String
  role String
  status Status
  dateApplied DateTime
  userId String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("job_applications")
}

enum Status {
  APPLIED
  INTERVIEW
  OFFER
  REJECTED
  ACCEPTED
}